<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

    <TextView
        android:id="@+id/team_lbl"
        android:gravity="center"
	android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/text_margin" />

    <View
        style="@style/Divider"
        android:id="@+id/divider0"
        android:layout_margin="@dimen/text_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/team_lbl"/>

    <TextView
        android:id="@+id/autonomous"
        android:text="@string/autonomous"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:layout_below="@id/divider0"/>

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/baseline"
        android:text="@string/baseline"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/autonomous"
        android:layout_margin="@dimen/text_margin"/>

    <android.support.v7.widget.GridLayout
        android:id="@+id/auto_grid"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:grid="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        grid:useDefaultMargins="true"
        grid:alignmentMode="alignBounds"
        android:layout_below="@id/baseline"
        grid:columnCount="4">

    <TextView
        android:id="@+id/asw_txt"
        android:text="@string/on_switch"
        android:layout_margin="@dimen/text_margin"/>

    <Button
        android:id="@+id/asw_minus"
        android:text="@string/minus"
        android:minWidth="40dp"/>

    <TextView
        android:id="@+id/auto_switch"
        android:text="0"
        android:layout_margin="@dimen/text_margin"/>

    <Button
        android:id="@+id/asw_plus"
        android:text="@string/plus"
        android:minWidth="40dp"/>

    <TextView
        android:id="@+id/asc_txt"
        android:text="@string/scale"
        android:layout_margin="@dimen/text_margin"/>

    <Button
        android:id="@+id/asc_minus"
        android:text="@string/minus"
        android:minWidth="40dp"/>

    <TextView
        android:id="@+id/auto_scale"
        android:text="0"
        android:layout_margin="@dimen/text_margin"/>

    <Button
        android:id="@+id/asc_plus"
        android:text="@string/plus"
        android:minWidth="40dp"/>

    </android.support.v7.widget.GridLayout>

    <View
        style="@style/Divider"
        android:id="@+id/divider1"
        android:layout_margin="@dimen/text_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/auto_grid"/>

    <TextView
        android:id="@+id/teleop"
        android:text="@string/teleop_cubes"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider1"
        android:layout_margin="@dimen/text_margin" />

    <android.support.v7.widget.GridLayout
        android:id="@+id/tele_grid"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:grid="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        grid:useDefaultMargins="true"
        grid:alignmentMode="alignBounds"
        android:layout_below="@id/teleop"
        grid:columnCount="4">

    <TextView
        android:id="@+id/tsw_txt"
        android:text="@string/on_switch"
        android:layout_margin="@dimen/text_margin"/>

    <Button
        android:id="@+id/tsw_minus"
        android:text="@string/minus"
        android:minWidth="40dp"/>

    <TextView
        android:id="@+id/tele_switch"
        android:text="0"
        android:layout_margin="@dimen/text_margin"/>

    <Button
        android:id="@+id/tsw_plus"
        android:text="@string/plus"
        android:minWidth="40dp"/>

    <TextView
        android:id="@+id/opp_txt"
        android:text="@string/opp_switch"
        android:layout_margin="@dimen/text_margin"/>

    <Button
        android:id="@+id/opp_minus"
        android:text="@string/minus"
        android:minWidth="40dp"/>

    <TextView
        android:id="@+id/opp_switch"
        android:text="0"
        android:layout_margin="@dimen/text_margin"/>

    <Button
        android:id="@+id/opp_plus"
        android:text="@string/plus"
        android:minWidth="40dp"/>

    <TextView
        android:id="@+id/tsc_txt"
        android:text="@string/scale"
        android:layout_margin="@dimen/text_margin"/>

    <Button
        android:id="@+id/tsc_minus"
        android:text="@string/minus"
        android:minWidth="40dp"/>

    <TextView
        android:id="@+id/tele_scale"
        android:text="0"
        android:layout_margin="@dimen/text_margin"/>

    <Button
        android:id="@+id/tsc_plus"
        android:text="@string/plus"
        android:minWidth="40dp"/>

    <TextView
        android:id="@+id/fell_txt"
        android:text="@string/fell_scale"
        android:layout_margin="@dimen/text_margin"/>

    <Button
        android:id="@+id/fell_minus"
        android:text="@string/minus"
        android:minWidth="40dp"/>

    <TextView
        android:id="@+id/fell_scale"
        android:text="0"
        android:layout_margin="@dimen/text_margin"/>

    <Button
        android:id="@+id/fell_plus"
        android:text="@string/plus"
        android:minWidth="40dp"/>

    <TextView
        android:id="@+id/ex_txt"
        android:text="@string/exchange"
        android:layout_margin="@dimen/text_margin"/>

    <Button
        android:id="@+id/ex_minus"
        android:text="@string/minus"
        android:minWidth="40dp"/>

    <TextView
        android:id="@+id/exchange"
        android:text="0"
        android:layout_margin="@dimen/text_margin"/>

    <Button
        android:id="@+id/ex_plus"
        android:text="@string/plus"
        android:minWidth="40dp"/>

    </android.support.v7.widget.GridLayout>

    <View
        style="@style/Divider"
        android:id="@+id/divider2"
        android:layout_margin="@dimen/text_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tele_grid"/>

    <TextView
        android:id="@+id/power_cubes"
        android:text="@string/power_cubes"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider2"
        android:layout_margin="@dimen/text_margin" />

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/cube_from_human"
        android:text="@string/cube_from_human"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/power_cubes"
        android:layout_margin="@dimen/text_margin"/>

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/cube_floor"
        android:text="@string/cube_floor"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cube_from_human"
        android:layout_margin="@dimen/text_margin"/>

    <View
        style="@style/Divider"
        android:id="@+id/divider3"
        android:layout_margin="@dimen/text_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cube_floor" />

    <TextView
        android:id="@+id/other"
        android:text="@string/other"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider3"
        android:layout_margin="@dimen/text_margin" />

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/defense"
        android:text="@string/defense"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/other"
        android:layout_margin="@dimen/text_margin"/>

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/climb"
        android:text="@string/climb"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/defense"
        android:layout_margin="@dimen/text_margin"/>

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/rider"
        android:text="@string/rider"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/climb"
        android:layout_margin="@dimen/text_margin"/>

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/park"
        android:text="@string/park"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rider"
        android:layout_margin="@dimen/text_margin"/>

    <View
        style="@style/Divider"
        android:id="@+id/divider4"
        android:layout_margin="@dimen/text_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/park" />

    <EditText
        android:id="@+id/notes"
        android:layout_margin="@dimen/text_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider4" />

</RelativeLayout>
