<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/match_detail"
              android:orientation="vertical">

    <TextView
        android:text="@string/red_alliance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin" />

    <LinearLayout
        android:background="@color/red"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/red_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="startRed0" />

        <Button
            android:id="@+id/red_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="startRed1" />

        <Button
            android:id="@+id/red_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="startRed2" />

    </LinearLayout>

    <TextView
        android:text="@string/blue_alliance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin" />

    <LinearLayout
        android:background="@color/blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/blue_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="startBlue0" />

        <Button
            android:id="@+id/blue_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="startBlue1" />

        <Button
            android:id="@+id/blue_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="startBlue2" />

    </LinearLayout>

</LinearLayout>
